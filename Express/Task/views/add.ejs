<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script>
        function validation() {
            let id = document.forms["myForm"]["isbn"].value;
            if (id.length !== 10){
                alert("Id must have 10 digits!")
                return false
            }
            // let title = document.forms["myForm"]["title"].value;
            // let author = document.forms["myForm"]["author"].value;
            // let subtitle = document.forms["myForm"]["subtitle"].value;
            // let desc = document.forms["myForm"]["desc"].value;
            // let web = document.forms["myForm"]["web"].value;
            // let publisher = document.forms["myForm"]["publisher"].value;
            // let page = document.forms["myForm"]["page"].value;
        }
    </script>
</head>

<body>
    <div class="form" style="margin: 25%; line-height: 30px; width: 50%;">
        <form name="myForm" class="row g-3 was-validated" onsubmit="return validation()">
            <div class="col-md-6">
              <label for="title" class="form-label">Title</label>
              <input required name="title" type="text" class="form-control is-invalid" id="title" placeholder="Title">
            </div>
            <div class="col-md-6">
              <label for="author" class="form-label">Author</label>
              <input required name="author" type="text" class="form-control is-invalid" id="author" placeholder="Author">
            </div>
            <div class="col-9">
              <textarea required name="subtitle" type="text" class="form-control is-invalid" id="subtitle" placeholder="Subtitle"></textarea>
            </div>
            <div class="col-md-3">
                <input required name="isbn" type="text" class="form-control is-invalid" id="isbn" placeholder="**********">
              </div>
            <div class="col-12">
              <label for="desc" class="form-label">Description</label>
              <textarea required name="desc" type="text" class="form-control is-invalid" id="desc" placeholder="What's the book about?"></textarea>
            </div>
            <div class="col-md-6">
              <label for="web" class="form-label">Website</label>
              <input required name="web" type="text" class="form-control is-invalid" id="web">
            </div>
            <div class="col-md-4">
              <label for="inputState" class="form-label">Publisher</label>
              <select name="publisher" id="inputState" class="form-select">
                <option selected>No Starch Press</option>
                <option>O'Reilly Media</option>
                <option>Independently published</option>
                <option>Apress; 2nd edition</option>
                <option>Apress</option>
              </select>
            </div>
            <div class="col-md-2">
              <label for="page" class="form-label">Pages</label>
              <input required name="page" type="number" class="form-control is-invalid" id="page" placeholder="***">
            </div>
            <div class="col-12">
              <button type="submit" style="background-color: rgb(89, 148, 168); border: rgb(89, 148, 168); color: rgb(10, 40, 51); width: 100%; margin-top: 30px;" class="btn btn-primary">Add a book</button>
            </div>
          </form>
    </div>
</body>


</html>